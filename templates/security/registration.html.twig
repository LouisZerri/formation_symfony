{% extends "base.html.twig" %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}

	<div class="container mt-5">
	    {{ form_start(form)}}
	        {{form_row(form.username, {'label' : "Nom d'utilisateur", 'attr' : {'placeholder':'Nom d\'utilisateur'}})}}
	{{form_row(form.password, {'label' : 'Mot de passe', 'attr' : {'placeholder':'Mot de passe'}})}}
	{{form_row(form.confirm_password, {'label' : 'Confirmer votre mot de passe', 'attr' : {'placeholder':'Confirmez votre mot de passe'}})}}
		<button class="btn btn-primary" type="submit">Inscription</button>
	{{form_end(form)}}

{% endblock %}
